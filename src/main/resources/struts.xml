<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <!-- Configuración general -->
    <constant name="struts.ui.theme" value="xhtml"/>
    <constant name="struts.devMode" value="true"/>

    <package name="default" namespace="/" extends="struts-default">

        <!-- Página principal (DNI) -->
        <action name="index" class="org.demo.actions.Index">
            <result name="success">welcome.jsp</result>
            <result name="input">index.jsp</result>
        </action>

        <!-- Formulario de alta de alumno -->
        <action name="registry" class="org.demo.actions.RegistryAction">
            <result name="success">welcome.jsp</result>
            <result name="input">registryForm.jsp</result>
        </action>

        <!-- Mostrar información del alumno -->
        <action name="alumno" class="org.demo.actions.AlumnoAction">
            <result name="success">welcome.jsp</result>
            <result name="input">index.jsp</result>
        </action>

    </package>

</struts>
